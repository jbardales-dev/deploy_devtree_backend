{
    "compilerOptions": {
        "outDir": "./dist", 
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target": "ESNext", 
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "strict": false, 
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    }, 
    "include": ["src/**/*.ts"]
}